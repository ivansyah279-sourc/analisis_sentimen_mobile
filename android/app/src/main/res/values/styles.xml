<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Theme saat splash screen -->
    <style name="LaunchTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:windowBackground">@drawable/launch_background</item>
    </style>

    <!-- Theme utama Flutter -->
    <style name="NormalTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:windowBackground">?android:colorBackground</item>
    </style>

    <!-- UCropActivity custom theme -->
    <style name="UCropActivityTheme" parent="Theme.AppCompat.Light">
        <item name="windowActionBar">false</item> <!-- Fix utama -->
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">#BC764A</item>
        <item name="colorPrimaryDark">#A15F36</item>
        <item name="colorAccent">#A15F36</item>

        <!-- Fix status bar overlap -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">#A15F36</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowFullscreen">false</item>
    </style>


</resources>
